public class Ejercicio41 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // a) Ángulo recto
        System.out.print("Ingrese un ángulo: ");
        int angulo = sc.nextInt();
        if (angulo == 90) {
            System.out.println("El ángulo es un ángulo recto");
        } else {
            System.out.println("El ángulo no es un ángulo recto");
        }

        // b) Temperatura
        System.out.print("Ingrese la temperatura: ");
        int temperatura = sc.nextInt();
        if (temperatura > 100) {
            System.out.println("Por encima del punto de ebullición del agua");
        } else {
            System.out.println("Por debajo del punto de ebullición del agua");
        }

        // c) Positivo / Negativo
        int totalPositivos = 0, totalNegativos = 0;
        System.out.print("Ingrese un número: ");
        int numero = sc.nextInt();
        if (numero > 0) {
            totalPositivos += numero;
        } else {
            totalNegativos += numero;
        }

        // d) Condición con x,y,z
        System.out.print("Ingrese x: ");
        int x = sc.nextInt();
        System.out.print("Ingrese y: ");
        int y = sc.nextInt();
        System.out.print("Ingrese z: ");
        int z = sc.nextInt();
        if (x > y && z < 20) {
            System.out.print("Ingrese p: ");
            int p = sc.nextInt();
        }

        // e) distancia
        System.out.print("Ingrese distancia: ");
        int distancia = sc.nextInt();
        if (distancia > 20 && distancia < 35) {
            System.out.print("Ingrese tiempo: ");
            int tiempo = sc.nextInt();
        }
    }
}

// 4.2 ejercicio del taller 
public class Ejercicio42 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Ingrese primer número: ");
        int num1 = sc.nextInt();
        System.out.print("Ingrese segundo número: ");
        int num2 = sc.nextInt();

        if (num1 > num2) {
            System.out.println("El primer número es el mayor");
        } else if (num1 < num2) {
            System.out.println("El primer número es el más pequeño");
        } else {
            System.out.println("Ambos números son iguales");
        }
    }
}
//4.3 TALLER DEL EJERCICIO 


public class Ejercicio43 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Ingrese tres números: ");
        int a = sc.nextInt();
        int b = sc.nextInt();
        int c = sc.nextInt();

        int central;
        if ((b > a && b < c) || (b > c && b < a)) {
            central = b;
        } else if ((a > b && a < c) || (a > c && a < b)) {
            central = a;
        } else {
            central = c;
        }

        System.out.println("El número central es: " + central);
    }
}
//clase 4.4EJERCICIO DEL TALLER 

public class Ejercicio44 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Ingrese un número: ");
        double num = sc.nextDouble();

        if (num >= 0) {
            double raiz = Math.sqrt(num);
            System.out.println("La raíz cuadrada es: " + raiz);
        } else {
            System.out.println("No existe raíz real para un número negativo");
        }
    }
}
